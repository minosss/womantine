{
    "compilerOptions": {
        "lib": ["DOM", "ESNext"],
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "jsx": "react",
        "resolveJsonModule": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noEmitOnError": true,
      },
      "include": ["./src/**/*.ts"],
      "exclude": ["node_modules"]
}